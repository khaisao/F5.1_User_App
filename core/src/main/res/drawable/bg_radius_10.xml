<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@color/primary_50"
                android:startColor="@color/primary"
                android:type="linear" />
            <corners android:radius="@dimen/common_dialog_corner" />
            <padding
                android:bottom="@dimen/common_dialog_padding"
                android:left="@dimen/common_dialog_padding"
                android:right="0dp"
                android:top="@dimen/common_dialog_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/primary_50"
                android:startColor="@color/primary"
                android:type="linear" />
            <corners android:radius="@dimen/common_dialog_corner" />
            <padding
                android:bottom="@dimen/common_dialog_padding"
                android:left="@dimen/common_dialog_padding"
                android:right="@dimen/common_dialog_padding"
                android:top="0dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:endColor="@color/primary_50"
                android:startColor="@color/primary"
                android:type="linear" />
            <corners android:radius="@dimen/common_dialog_corner" />
            <padding
                android:bottom="@dimen/common_dialog_padding"
                android:left="0dp"
                android:right="@dimen/common_dialog_padding"
                android:top="@dimen/common_dialog_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:endColor="@color/primary_50"
                android:startColor="@color/primary"
                android:type="linear" />
            <corners android:radius="@dimen/common_dialog_corner" />
            <padding
                android:bottom="0dp"
                android:left="@dimen/common_dialog_padding"
                android:right="@dimen/common_dialog_padding"
                android:top="@dimen/common_dialog_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/common_dialog_corner" />
            <solid android:color="@color/primary" />
            <padding
                android:bottom="@dimen/common_dialog_padding2"
                android:left="@dimen/common_dialog_padding"
                android:right="@dimen/common_dialog_padding"
                android:top="@dimen/common_dialog_padding" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/common_dialog_padding2"
                android:left="@dimen/common_dialog_padding2"
                android:right="@dimen/common_dialog_padding2"
                android:top="@dimen/common_dialog_padding2" />
            <solid android:color="@color/background_dark" />
            <corners android:radius="@dimen/common_dialog_corner" />
        </shape>
    </item>
</layer-list>
