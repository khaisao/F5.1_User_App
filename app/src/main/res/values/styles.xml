<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="text_bold">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/hiragino_sans_w6</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/hiragino_sans_w6</item>
        <item name="android:textSize">@dimen/text_size_13</item>

    </style>


    <style name="text_normal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/hiragino_sans_w3</item>

    </style>

    <style name="text_bold_16" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="text_bold_14" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="text_bold_8" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_8</item>
    </style>

    <style name="text_bold_9" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_9</item>
    </style>

    <style name="text_bold_10" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>

    <style name="text_bold_11" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <style name="text_bold_12" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="text_bold_15" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="text_bold_18" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="text_18" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="text_16" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="text_14" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="text_13" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="text_12" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="text_user_profile_12" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_user_profile_12</item>
    </style>

    <style name="text_9" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_9</item>
    </style>

    <style name="text_10" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>

    <style name="text_11" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <style name="text_title_bold_28" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_title_28</item>
    </style>

    <style name="text_error_email_bold_12" parent="text_bold">
        <item name="android:textSize">@dimen/text_size_error_email_12</item>
    </style>

    <style name="text_verify_code_14" parent="text_normal">
        <item name="android:textSize">@dimen/text_size_send_email_14</item>
    </style>

    <style name="text_re_register_16" parent="text_bold">
        <item name="android:textSize">@dimen/text_title_re_register_16</item>
    </style>

    <style name="layout_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="recycler_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/white</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <!--        <item name="android:windowEnterAnimation">@anim/slide_up</item>-->
        <!--        <item name="android:windowExitAnimation">@anim/slide_down</item>-->
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="statusBarBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DropDownStyle">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:cacheColorHint">#FFF000</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout.FilledBox.Dense" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="errorIconDrawable">@null</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorTextColor">@color/white</item>
        <item name="colorControlActivated">@color/color_6D5D9A</item>
    </style>

    <style name="CommonChipGroupChoiceStyle">
        <item name="singleSelection">true</item>
        <item name="chipSpacingHorizontal">@dimen/padding_10</item>
        <item name="chipSpacingVertical">@dimen/padding_12</item>
    </style>

    <style name="CommonChipGroupMultipleChoiceStyle">
        <item name="chipSpacingHorizontal">@dimen/padding_10</item>
        <item name="chipSpacingVertical">@dimen/padding_12</item>
    </style>

    <style name="CommonChipChoiceStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_choice_bg_color</item>
        <item name="android:textColor">@color/chip_choice_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="chipEndPadding">@dimen/padding_16dp</item>
        <item name="chipStartPadding">@dimen/padding_16dp</item>
        <item name="chipMinHeight">@dimen/margin_34</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="chipStrokeWidth">@dimen/view_size_1</item>
        <item name="chipStrokeColor">@color/chip_choice_stroke_color</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
    </style>

    <style name="ButtonToggleGroupStyle">
        <item name="android:background">@drawable/bg_toggle_button_group</item>
        <item name="android:padding">@dimen/padding_2</item>
    </style>

    <style name="ButtonToggleStyle">
        <item name="android:background">@drawable/bg_toggle_button</item>
        <item name="android:textColor">@color/button_choice_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:button">@null</item>
    </style>

    <style name="size_auto">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetBackgroundTransparent</item>
    </style>

    <style name="BottomSheetBackgroundTransparent" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RMRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/bg_rm_rbtn</item>
    </style>

    <style name="BottomNavigationReviewModeTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/color_F0F0F0</item>
        <item name="android:textColorSecondary">@color/color_F0F0F0</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationReviewMode.TextAppearance
        </item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationReviewMode.TextAppearance
        </item>
    </style>

    <style name="BottomNavigationReviewMode.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_9</item>
        <item name="fontFamily">@font/hiragino_sans_w6</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">#f0f0f0</item>
        <item name="android:fontFamily">@font/hiragino_sans_w3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="overlapAnchor">false</item>
    </style>
</resources>