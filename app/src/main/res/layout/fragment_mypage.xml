<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="jp.careapp.counseling.android.ui.mypage.MyPageViewModel" />

        <variable
            name="member"
            type="jp.careapp.counseling.android.data.network.MemberResponse" />

    </data>

  <androidx.core.widget.NestedScrollView
      android:background="@color/color_background_common"
      android:fillViewport="true"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fitsSystemWindows="true"
          android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_disable_button"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingVertical="@dimen/text_size_32">

              <TextView
                  android:id="@id/tv_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@{member.name}"
                  android:textColor="@color/color_text_E3DFEF"
                  android:textSize="@dimen/margin_16"
                  android:textStyle="bold"
                  tools:ignore="SpUsage" />

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/margin_8"
                  android:layout_marginBottom="@dimen/margin_16"
                  android:orientation="horizontal">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginEnd="@dimen/_3sdp"
                      android:text="@string/code"
                      android:textColor="@color/purple_AEA2D1"
                      android:textSize="@dimen/text_size_12" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@{member.code}"
                      android:textColor="@color/purple_AEA2D1"
                      android:textSize="@dimen/text_size_12" />
              </LinearLayout>

              <TextView
                  android:onClick="@{()->viewModel.editProfile(member)}"
                  android:id="@+id/tv_edit"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/bg_text_25"
                  android:paddingHorizontal="@dimen/text_size_24"
                  android:paddingVertical="@dimen/padding_10"
                  android:text="@string/edit_profile"
                  android:textColor="@color/color_978DFF"
                  android:textSize="@dimen/text_size_12"
                  android:textStyle="bold" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_background_common"
              android:orientation="vertical">

              <RelativeLayout
                  android:id="@+id/point_free"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginHorizontal="@dimen/margin_16"
                  android:layout_marginTop="@dimen/margin_8"
                  android:background="@drawable/bg_gradient_btn"
                  android:paddingHorizontal="@dimen/margin_16">

                  <ImageView
                      android:id="@+id/iv_p"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="@dimen/margin_8"
                      android:paddingVertical="@dimen/padding_10"
                      android:src="@drawable/ic_icofreepts"
                      tools:ignore="ContentDescription" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_toEndOf="@+id/iv_p"
                      android:text="@string/get_point_free"
                      android:textColor="@color/white"
                      android:textSize="@dimen/text_size_14"
                      android:textStyle="bold"
                      tools:ignore="RelativeOverlap" />

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="@dimen/margin_8"
                      android:paddingVertical="@dimen/padding_10"
                      android:src="@drawable/ic_icoarrowright"
                      tools:ignore="ContentDescription" />
              </RelativeLayout>

              <RelativeLayout
                  android:id="@+id/account_transfer"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:onClick="@{()->viewModel.editProfile(member)}"
                  android:layout_marginHorizontal="@dimen/margin_16"
                  android:layout_marginTop="@dimen/margin_8"
                  android:background="@drawable/bg_gradient_layout_banner_login_without_email"
                  android:paddingHorizontal="@dimen/margin_16"
                  android:visibility="gone">

                  <ImageView
                      android:id="@+id/iv_caution"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="@dimen/margin_8"
                      android:paddingVertical="@dimen/padding_10"
                      android:src="@drawable/ic_caution"
                      tools:ignore="ContentDescription" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_toEndOf="@+id/iv_caution"
                      android:text="@string/login_without_email_caution"
                      android:textColor="@color/white"
                      android:textSize="@dimen/text_size_14"
                      android:textStyle="bold"
                      tools:ignore="RelativeOverlap" />

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:layout_centerVertical="true"
                      android:layout_marginEnd="@dimen/margin_8"
                      android:paddingVertical="@dimen/padding_10"
                      android:src="@drawable/ic_icoarrowright"
                      tools:ignore="ContentDescription" />
              </RelativeLayout>

              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rv_action"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                  app:spanCount="3"
                  tools:listitem="@layout/item_action_mypage" />
          </LinearLayout>
      </LinearLayout>
  </androidx.core.widget.NestedScrollView>
</layout>