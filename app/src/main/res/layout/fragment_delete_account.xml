<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_common"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/tool_bar_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_sub24sdp"
            android:fitsSystemWindows="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_size_24"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/btn_confirm">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_34"
                        android:text="@string/please_use_Keappli"
                        android:textAlignment="center"
                        android:textColor="@color/color_text_E3DFEF"
                        android:textSize="@dimen/margin_16"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_28"
                        android:text="@string/reason_delete_account"
                        android:textColor="@color/color_text_E3DFEF"
                        android:textSize="@dimen/margin_14" />

                    <EditText
                        android:id="@+id/edt_reason_for_delete"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_159sdp"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/text_size_32"
                        android:background="@drawable/bg_strock_8dp_978dff"
                        android:gravity="top"
                        android:hint="@string/hint_reason_delete_account"
                        android:padding="@dimen/margin_16"
                        android:textColor="@color/color_text_E3DFEF"
                        android:textColorHint="@color/color_6D5D9A"
                        android:textSize="@dimen/margin_16" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/text_size_24"
                    android:background="@drawable/bg_text_40"
                    android:enabled="false"
                    android:paddingHorizontal="@dimen/_63sdp"
                    android:paddingVertical="@dimen/_15sdp"
                    android:text="@string/confirm_delete_account"
                    android:textColor="@color/color_6D5D9A"
                    android:textSize="@dimen/margin_14"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>