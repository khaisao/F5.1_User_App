<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_common">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_avatar_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.7" />

                <ImageView
                    android:id="@+id/avatar_iv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_avt_performer"
                    app:layout_constraintEnd_toEndOf="@id/gl_avatar_right"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_gallery"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/avatar_iv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/gl_avatar_right"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/img_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_33"
                    android:layout_marginStart="@dimen/margin_12"
                    android:layout_marginTop="@dimen/margin_8"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_rank_daily_2"
                    app:layout_constraintStart_toEndOf="@id/stage_iv"
                    app:layout_constraintTop_toBottomOf="@id/avatar_iv" />

                <TextView
                    android:id="@+id/presence_status_tv"
                    style="@style/text_bold_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_12"
                    android:background="@drawable/bg_performer_status_live_streaming"
                    android:gravity="center"
                    android:paddingStart="@dimen/margin_6dp"
                    android:paddingTop="@dimen/margin_3"
                    android:paddingEnd="@dimen/margin_6dp"
                    android:paddingBottom="@dimen/margin_3"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/img_ranking"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_ranking"
                    tools:text="@string/presence_status_live_streaming" />

                <ImageView
                    android:id="@+id/stage_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_30"
                    android:layout_alignStart="@+id/avatar_iv"
                    android:layout_alignEnd="@+id/avatar_iv"
                    android:layout_alignBottom="@+id/avatar_iv"
                    android:layout_marginStart="8dp"
                    android:minWidth="70dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@id/presence_status_tv"
                    app:layout_constraintStart_toEndOf="@id/presence_status_tv"
                    app:layout_constraintTop_toTopOf="@id/presence_status_tv" />

                <TextView
                    android:id="@+id/tv_message_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/color_FC00FF"
                    android:shadowRadius="18"
                    android:text="Message noticeMessage noticeMessage notice"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/presence_status_tv" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_12"
                    app:cardBackgroundColor="@color/color_background_common"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_message_notice"
                    app:strokeColor="@color/color_E1D600"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/margin_14">

                        <TextView
                            android:id="@+id/user_name_tv"
                            style="@style/text_bold_16"
                            android:layout_marginTop="@dimen/margin_12"
                            android:shadowColor="@color/color_9A33FF"
                            android:shadowRadius="18"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="名前なまえ名前なまえ" />

                        <TextView
                            android:id="@+id/tv_bust"
                            style="@style/text_bold_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_6"
                            android:text="E cup"
                            android:textColor="@color/color_F0F0F0"
                            app:layout_constraintStart_toStartOf="@id/user_name_tv"
                            app:layout_constraintTop_toBottomOf="@id/user_name_tv" />

                        <TextView
                            style="@style/text_bold_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_6"
                            android:layout_marginTop="@dimen/margin_6"
                            android:text="24 tuoi"
                            android:textColor="@color/color_F0F0F0"
                            app:layout_constraintStart_toEndOf="@id/tv_bust"
                            app:layout_constraintTop_toBottomOf="@id/user_name_tv" />

                        <FrameLayout
                            android:id="@+id/fl_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_12"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/add_favorite_tv"
                                android:layout_width="@dimen/dimen_36"
                                android:layout_height="@dimen/dimen_36"
                                android:src="@drawable/ic_add_follow_inactive" />

                            <ImageView
                                android:id="@+id/remove_favorite_tv"
                                android:layout_width="@dimen/dimen_36"
                                android:layout_height="@dimen/dimen_36"
                                android:src="@drawable/ic_remove_follow"
                                android:visibility="invisible"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </FrameLayout>

                        <TextView
                            style="@style/text_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_2"
                            android:text="90000"
                            android:textColor="@color/color_B2A9CC"
                            app:layout_constraintEnd_toEndOf="@id/fl_follow"
                            app:layout_constraintStart_toStartOf="@id/fl_follow"
                            app:layout_constraintTop_toBottomOf="@id/fl_follow" />

                        <View
                            android:id="@+id/divider1"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/margin_20"
                            android:background="@color/color_402C70"
                            app:layout_constraintStart_toStartOf="@id/user_name_tv"
                            app:layout_constraintTop_toBottomOf="@id/fl_follow" />

                        <TextView
                            style="@style/text_14"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_16"
                            android:paddingBottom="@dimen/padding_16dp"
                            android:text="wasgsgasgsagsagsaaasgasgsgggggggggassagsagasgasgggggggggge"
                            android:textColor="@color/color_F0F0F0"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/divider1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:src="@drawable/ic_more_white"
                    app:layout_constraintEnd_toEndOf="@id/cv_info"
                    app:layout_constraintTop_toBottomOf="@id/cv_info" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_6"
            android:layout_marginTop="@dimen/margin_8"
            android:padding="@dimen/padding_4"
            android:src="@drawable/ic_back_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/margin_12"
            android:background="@color/color_402C70"
            app:layout_constraintBottom_toTopOf="@id/clAction" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingBottom="@dimen/margin_24"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/send_consult_ll"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginHorizontal="@dimen/margin_4dp"
                android:background="@drawable/bg_corner_26dp_978dff_alpha"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ll_call_consult"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_btn_message_active" />

                <TextView
                    style="@style/text_bold_16"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:gravity="center"
                    android:text="@string/consult_by_chat"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_call_consult"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_marginHorizontal="@dimen/margin_4dp"
                android:background="@drawable/bg_button_call"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/send_consult_ll"
                app:layout_constraintWidth_percent="0.48">

                <ImageView
                    android:id="@+id/ivCall"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_price_call" />

                <TextView
                    android:id="@+id/tvCall"
                    style="@style/text_bold_16"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:gravity="center"
                    android:lineSpacingExtra="0dp"
                    android:text="@string/consult_by_call"
                    android:textColor="@color/white" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
