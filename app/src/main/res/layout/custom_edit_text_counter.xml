<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt"
            style="@style/text_bold_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_978DFF"
            android:maxLength="10"
            android:paddingVertical="14dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ハイ・ダン" />

        <TextView
            android:id="@+id/tvCounter"
            style="@style/text_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/count_default"
            android:textColor="@color/color_70658D"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/edt"
            app:layout_constraintEnd_toEndOf="@id/edt"
            app:layout_constraintTop_toTopOf="@id/edt"
            tools:text="0/10" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>