<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/rt_consultant_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:numStars="5"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srb_drawableEmpty="@drawable/ic_rating_empty"
            app:srb_drawableFilled="@drawable/ic_rating_full"
            app:srb_isIndicator="true"
            app:srb_numStars="5"
            app:srb_starHeight="@dimen/rating_40dp"
            app:srb_starWidth="@dimen/rating_40dp" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollable"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rt_consultant_point">

            <TextView
                android:id="@+id/tv_consultant_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="top"
                android:scrollbars="vertical"
                android:textColor="@color/color_text_E3DFEF"
                android:textSize="@dimen/text_size_16" />
        </androidx.core.widget.NestedScrollView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_review"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_gradient"
            android:enabled="true"
            android:text="@string/review_consultant_submit"
            android:textColor="@drawable/text_common"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollable" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="@dimen/margin_24dp"
            android:background="@drawable/bg_gradient_gray"
            android:text="@string/review_consultant_back"
            android:textColor="@color/color_978DFF"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_review" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
