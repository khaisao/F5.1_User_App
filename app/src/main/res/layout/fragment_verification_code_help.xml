<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_dialog"
        android:orientation="vertical"
        tools:context=".ui.verifyCode.VerifyCodeHelpFragment">

        <jp.slapp.android.android.utils.customView.ToolBarCommon
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:src_left="@drawable/ic_arrow_left" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/text_bold_18"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:text="@string/title_do_not_receive_email"
                    android:textColor="@color/color_F0F0F0" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16"
                    app:cardBackgroundColor="@color/color_2C2147"
                    app:cardCornerRadius="@dimen/margin_12">

                    <LinearLayout
                        android:id="@+id/llContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_24"
                        android:layout_marginEnd="@dimen/margin_24"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/height_80">

                        <TextView
                            style="@style/text_bold_14"
                            android:layout_marginTop="@dimen/margin_32"
                            android:text="@string/please_confirm_your_email"
                            android:textColor="@color/color_F0F0F0" />

                        <TextView
                            style="@style/text_14"
                            android:layout_marginTop="16dp"
                            android:text="@string/please_sure_email_address_correct"
                            android:textColor="@color/color_F0F0F0" />

                        <TextView
                            android:id="@+id/tvYourEmail"
                            style="@style/text_bold_18"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_32"
                            android:gravity="center"
                            android:textColor="@color/color_F0F0F0"
                            tools:text="1234@abc.net" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_edit_contact"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_44"
                            android:layout_marginStart="@dimen/margin_48"
                            android:layout_marginTop="@dimen/margin_32"
                            android:layout_marginEnd="@dimen/margin_48"
                            android:background="@drawable/bg_gradient_common"
                            android:text="@string/correct_your_email_address"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_1"
                            android:layout_marginTop="34dp"
                            android:alpha="0.15"
                            android:background="@color/white" />

                        <TextView
                            style="@style/text_bold_14"
                            android:layout_marginTop="@dimen/margin_32"
                            android:text="@string/please_check_email_reception_setting"
                            android:textColor="@color/color_F0F0F0" />

                        <TextView
                            android:id="@+id/tvContentHelp"
                            style="@style/text_14"
                            android:layout_marginTop="@dimen/margin_32"
                            android:lineSpacingExtra="@dimen/margin_4dp"
                            android:textColor="@color/color_F0F0F0"
                            tools:text="@string/description_information_help"
                            tools:textColor="@color/white" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btReSendEmail"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_44"
                            android:layout_marginStart="@dimen/margin_48"
                            android:layout_marginTop="@dimen/margin_32"
                            android:layout_marginEnd="@dimen/margin_48"
                            android:background="@drawable/bg_gradient_common"
                            android:text="@string/resend_confirmation_email"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_1"
                            android:layout_marginTop="@dimen/margin_34"
                            android:alpha="0.15"
                            android:background="@color/white" />

                        <TextView
                            style="@style/text_bold_14"
                            android:layout_marginTop="@dimen/margin_32"
                            android:fontFamily="@font/hiragino_sans_w6"
                            android:text="@string/above_method_not_solve_problem"
                            android:textColor="@color/color_text_E3DFEF" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btContactUs"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_44"
                            android:layout_marginStart="@dimen/margin_48"
                            android:layout_marginTop="@dimen/margin_32"
                            android:layout_marginEnd="@dimen/margin_48"
                            android:background="@drawable/bg_gradient_common"
                            android:text="@string/contact_us"
                            android:textColor="@color/color_F0F0F0"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>