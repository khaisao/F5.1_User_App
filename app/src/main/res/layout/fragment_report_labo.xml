<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_common">

        <jp.careapp.counseling.android.utils.customView.ToolBarCommon
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:src_left="@drawable/ic_back_left"
            app:string_title="@string/report" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLabel"
            style="@style/text_bold_16"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/margin_24dp"
            android:text="@string/choose_reason_report"
            android:textColor="@color/color_E3DFEF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBar" />

        <RadioGroup
            android:id="@+id/rgReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvLabel">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbViolent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_selector"
                android:paddingHorizontal="8dp"
                android:paddingVertical="14dp"
                android:text="@string/reason_violent_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#26FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cbReason"
                app:layout_constraintTop_toBottomOf="@+id/cbReason" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbOffensive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_selector"
                android:paddingHorizontal="8dp"
                android:paddingVertical="14dp"
                android:text="@string/reason_offensive_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#26FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cbReason"
                app:layout_constraintTop_toBottomOf="@+id/cbReason" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbDangerous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_selector"
                android:paddingHorizontal="8dp"
                android:paddingVertical="14dp"
                android:text="@string/reason_dangerous_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#26FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cbReason"
                app:layout_constraintTop_toBottomOf="@+id/cbReason" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/rbCopyrighted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_selector"
                android:paddingHorizontal="8dp"
                android:paddingVertical="14dp"
                android:text="@string/reason_copyrighted_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#26FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cbReason"
                app:layout_constraintTop_toBottomOf="@+id/cbReason" />

        </RadioGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReport"
            style="@style/text_bold_14"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_32"
            android:background="@drawable/bg_button_state"
            android:enabled="false"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="@string/report_btn"
            app:layout_constraintTop_toBottomOf="@+id/rgReason" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>