<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="data"
            type="jp.careapp.counseling.android.model.buy_point.ItemPoint" />
    </data>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/margin_22"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_performer_status_waiting"
            android:gravity="center"
            android:paddingVertical="@dimen/padding_14">

            <TextView
                app:layout_constraintTop_toTopOf="@id/tv_diviner"
                app:layout_constraintBottom_toBottomOf="@id/tv_diviner"
                app:layout_constraintEnd_toStartOf="@id/tv_diviner"
                android:id="@+id/action_buy_point_tv"
                style="@style/text_bold_14"
                android:paddingVertical="@dimen/margin_3"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/margin_3"
                android:gravity="center"
                android:text="@{data.money}"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_diviner"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/text_bold_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/margin_3"
                android:text="/"
                android:layout_marginEnd="@dimen/margin_3"
                android:textColor="@color/color_E3DFEF" />

            <TextView
                app:layout_constraintTop_toTopOf="@id/tv_diviner"
                app:layout_constraintBottom_toBottomOf="@id/tv_diviner"
                app:layout_constraintStart_toEndOf="@id/tv_diviner"
                android:id="@+id/point_tv"
                android:layout_marginStart="@dimen/margin_3"
                style="@style/text_bold_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/margin_3"
                android:text="@{data.pointCount}"
                android:textColor="@color/white" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
