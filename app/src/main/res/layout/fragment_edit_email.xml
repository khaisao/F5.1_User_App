<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/rlInputEmail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_common"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <include
            android:id="@+id/app_bar"
            layout="@layout/tool_bar_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_input_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_common"
            android:layout_below="@+id/app_bar"
            android:layout_marginLeft="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_24dp"
            android:layout_marginRight="@dimen/margin_24dp"
            android:background="@drawable/bg_input_text"
            android:hint="@string/hint_edit_email"
            android:importantForAutofill="no"
            android:inputType="text"
            android:lines="1"
            android:paddingLeft="@dimen/padding_10"
            android:textColor="@color/white"
            android:textColorHint="@color/color_6D5D9A"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_error_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_input_email"
            android:layout_marginLeft="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_24dp"
            android:text="@string/edit_error_email"
            android:textColor="@color/color_alert_error"
            android:textSize="@dimen/text_size_14"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_input_common"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_24dp"
            android:layout_marginEnd="@dimen/margin_24dp"
            android:layout_marginBottom="@dimen/margin_24"
            android:text="@string/confirm_edit_email"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"
            tools:background="@drawable/bg_disable_button"
            tools:ignore="RtlCompat"
            tools:textColor="@color/color_6D5D9A" />
    </RelativeLayout>
</layout>