<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_common">

        <include
            android:id="@+id/app_bar"
            layout="@layout/tool_bar_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ivCaution"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_bar"
            android:src="@drawable/ic_withdrawal_caution"/>

        <TextView
            android:id="@+id/tvCancelRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginHorizontal="50dp"
            android:text="@string/un_registration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCaution"
            android:textColor="@color/color_FF2875"/>


        <TextView
            android:id="@+id/tvTitleConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="start"
            android:layout_marginHorizontal="16dp"
            android:text="@string/withdrawal_confirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCancelRegister"
            android:textColor="@color/color_E3DFEF"/>

        <RelativeLayout
            android:id="@+id/rlSignInWithoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_24"
            android:background="@drawable/bg_gradient_common"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:paddingVertical="@dimen/padding_16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitleConfirm">

            <ImageView
                android:id="@+id/ivMessage"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:src="@drawable/ic_mail"
                tools:ignore="ContentDescription" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/text_bold_16"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_toEndOf="@+id/ivMessage"
                android:text="@string/link_email"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent" />
        </RelativeLayout>

        <TextView
            android:id="@+id/btnWithdrawal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_strock_26dp_978dff"
            android:text="@string/withdraw"
            android:textColor="@color/color_978DFF"
            android:paddingHorizontal="25dp"
            android:paddingVertical="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rlSignInWithoutEmail"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
