<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/review_consultant_sub_title"
            android:textSize="@dimen/text_size_14"
            android:gravity="center"
            android:textColor="@color/color_text_E3DFEF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/rt_consultant_point_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:numStars="5"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srb_clearRatingEnabled="false"
            app:srb_drawableEmpty="@drawable/ic_rating_empty"
            app:srb_drawableFilled="@drawable/ic_rating_full"
            app:srb_numStars="5"
            app:srb_starHeight="@dimen/rating_40dp"
            app:srb_starWidth="@dimen/rating_40dp"
            app:srb_rating="3"/>

        <EditText
            android:id="@+id/ed_review"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_input_text"
            android:gravity="top"
            android:hint="@string/review_consultant_review_hint"
            android:textColorHint="@color/color_6D5D9A"
            android:paddingTop="@dimen/padding_16dp"
            android:paddingHorizontal="@dimen/padding_10"
            android:paddingBottom="32dp"
            android:textColor="@color/color_text_E3DFEF"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rt_consultant_point_edit" />

        <TextView
            android:id="@+id/tvCount"
            style="@style/text_bold_10"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:text="140"
            android:textColor="@color/color_6D5D9A"
            app:layout_constraintEnd_toEndOf="@+id/ed_review"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/ed_review" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_gradient"
            android:enabled="false"
            android:text="@string/review_consultant_confirm"
            android:textColor="@color/color_AEA2D1"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_review" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="@dimen/margin_24dp"
            android:text="@string/review_consultant_cancel"
            android:textColor="@color/color_AEA2D1"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_confirm" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>