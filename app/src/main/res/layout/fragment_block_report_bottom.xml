<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_50090E1B">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_top_20dp_background_common"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent">


            <LinearLayout
                android:id="@+id/block_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_20"
                android:paddingTop="@dimen/margin_19"
                android:paddingRight="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_19">

                <TextView
                    style="@style/text_16"
                    android:text="@string/block"
                    android:textColor="@color/color_F0F0F0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/margin_20"
                android:paddingTop="@dimen/margin_19"
                android:paddingRight="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_19">

                <TextView
                    style="@style/text_16"
                    android:text="@string/report"
                    android:textColor="@color/color_F0F0F0" />
            </LinearLayout>

            <TextView
                android:id="@+id/cancel_button_tv"
                style="@style/text_bold_16"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_24"
                android:background="@drawable/bg_corner_24dp_443371"
                android:gravity="center"
                android:paddingTop="@dimen/margin_16"
                android:paddingBottom="@dimen/margin_16"
                android:text="@string/cancel"
                android:textColor="@color/color_B2A9CC" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>