<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0d002c"
        android:orientation="vertical">

        <jp.careapp.counseling.android.utils.customView.ToolBarCommon
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:color_title="@color/color_F0F0F0"
            app:src_left="@drawable/ic_arrow_left"
            app:string_title="@string/unsubscribed" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2A1F45" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/hiragino_sans_w6"
            android:gravity="center"
            android:text="@string/we_have_accepted"
            android:textColor="#f0f0f0"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/hiragino_sans_w3"
            android:lineSpacingExtra="4dp"
            android:text="@string/tks_for_using"
            android:textColor="#f0f0f0"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGoHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_gradient_common"
            android:fontFamily="@font/hiragino_sans_w6"
            android:gravity="center"
            android:minHeight="44dp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            android:text="@string/go_home"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>
</layout>