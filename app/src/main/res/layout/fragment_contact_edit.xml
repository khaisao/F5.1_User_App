<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_common"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/tool_bar_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="@dimen/_sub24sdp"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/text_size_24"
                        android:text="@string/member_code"
                        android:textColor="@color/color_text_E3DFEF"
                        android:textSize="@dimen/margin_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_code_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/text_size_12"
                        android:textColor="@color/purple_AEA2D1"
                        android:textSize="@dimen/margin_16" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/text_size_32"
                        android:text="@string/sub_title_edt_reregister"
                        android:textColor="@color/color_text_E3DFEF"
                        android:textSize="@dimen/margin_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/text_size_12"
                        android:textColor="@color/purple_AEA2D1"
                        android:textSize="@dimen/margin_16"
                        tools:text="duynk3@rikkeisoft.com" />

                    <EditText
                        android:id="@+id/edt_mail_edit"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_12"
                        android:background="@drawable/bg_menu_contact"
                        android:paddingHorizontal="@dimen/padding_10"
                        android:paddingVertical="@dimen/margin_14"
                        android:textSize="@dimen/text_size_16"
                        android:lines="1"
                        android:inputType="textEmailAddress"
                        android:importantForAutofill="no"
                        tools:text="duynk3@rikkeisoft.com"
                        android:hint="@string/hint_input_email"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/text_size_32"
                        android:text="@string/Inquiry_items"
                        android:textColor="@color/color_text_E3DFEF"
                        android:textSize="@dimen/margin_16"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/padding_10"
                        android:background="@drawable/bg_menu_contact"
                        android:paddingVertical="@dimen/margin_14"
                        android:editable="false"
                        android:focusable="false"
                        android:textSize="@dimen/margin_16"
                        android:text="@string/please_select"
                        android:paddingHorizontal="@dimen/padding_10"
                        app:drawableEndCompat="@drawable/ic_triangle" />
                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/text_size_12"
                        android:textColor="@color/purple_AEA2D1"
                        android:text="@string/about_login"
                        android:textSize="@dimen/margin_16" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/text_size_32"
                        android:text="@string/content_of_inquiry"
                        android:textColor="@color/color_text_E3DFEF"
                        android:textSize="@dimen/margin_16"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edt_content"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/padding_10"
                        android:background="@drawable/bg_menu_contact"
                        android:hint="@string/enter_the_reason"
                        android:gravity="top"
                        android:paddingHorizontal="@dimen/margin_16"
                        android:paddingTop="@dimen/margin_16"
                        android:paddingBottom="@dimen/text_size_18"
                        android:textSize="@dimen/margin_16" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="@dimen/text_size_32"
                        android:text="@string/absence_of_reply"
                        android:textColor="@color/color_text_E3DFEF"
                        android:textSize="@dimen/margin_16"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/check"
                    app:layout_constraintBottom_toTopOf="@+id/btn_confirm"
                    android:layout_marginBottom="@dimen/text_size_32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/btn_necessary"
                        android:paddingStart="@dimen/margin_16"
                        android:paddingEnd="@dimen/margin_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/necessary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox_selector"
                            android:buttonTint="@color/bottom_bar_text"
                            android:checked="true"
                            android:clickable="false"
                            android:paddingStart="@dimen/margin_8"
                            android:text="@string/necessary"
                            android:textSize="@dimen/margin_16"
                            tools:ignore="RtlSymmetry" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btn_unnecessary"
                        android:paddingHorizontal="@dimen/margin_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/unnecessary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/bottom_bar_text"
                            android:button="@drawable/checkbox_selector"
                            android:checked="false"
                            android:clickable="false"
                            android:paddingStart="@dimen/margin_8"
                            android:text="@string/unnecessary"
                            android:textSize="@dimen/margin_16" />
                    </FrameLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_disable_button"
                    android:textColor="@color/color_6D5D9A"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="@dimen/text_size_24"
                    android:layout_marginVertical="@dimen/text_size_32"
                    android:enabled="false"
                    android:text="@string/check_the_contents"
                    android:textSize="@dimen/margin_14" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>