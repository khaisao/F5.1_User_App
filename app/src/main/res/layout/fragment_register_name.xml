<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rlRegisterName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_common"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <jp.careapp.counseling.android.utils.customView.ToolBarCommon
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:src_left="@drawable/ic_back_left"
            app:string_title="@string/title_register_name" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool_bar"
            android:fillViewport="true"
            android:fitsSystemWindows="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_background_common">

                <RelativeLayout
                    android:id="@+id/rlInputName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_24dp"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:layout_marginRight="@dimen/margin_24dp"
                    android:background="@drawable/bg_input_text">

                    <EditText
                        android:id="@+id/edt_name_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:background="@color/transparent"
                        android:hint="ニックネーム"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingTop="@dimen/padding_12"
                        android:paddingBottom="@dimen/padding_12"
                        android:textColor="@color/white"
                        android:textColorHint="@color/color_6D5D9A"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/padding_10"
                        android:textColor="@color/purple_AEA2D1"
                        android:textSize="@dimen/text_size_10"
                        android:textStyle="bold"
                        tools:text="10" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_please_input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlInputName"
                    android:layout_marginLeft="@dimen/margin_24dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_marginRight="@dimen/margin_24dp"
                    android:text="@string/please_enter_valid_name"
                    android:textColor="@color/color_alert_error"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/margin_24dp"
                    android:layout_marginEnd="@dimen/margin_24dp"
                    android:layout_marginBottom="@dimen/margin_12"
                    android:background="@drawable/bg_gradient"
                    android:enabled="false"
                    android:text="@string/text_register_name"
                    android:textColor="@drawable/text_common"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>