<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_1D1045">

        <jp.careapp.counseling.android.utils.customView.ToolBarCommon
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:src_left="@drawable/ic_back_left"
            app:string_title="@string/trouble_edit_title" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrool_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/divider"
            android:layout_below="@+id/tool_bar"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLabelGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/label_genre"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cgGenres"
                    style="@style/CommonChipGroupChoiceStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvLabelGenre" />

                <TextView
                    android:id="@+id/tvTroubleSheet"
                    style="@style/text_16"
                    android:layout_marginTop="@dimen/margin_14"
                    android:paddingLeft="@dimen/margin_16"
                    android:paddingRight="@dimen/margin_16"
                    android:text="@string/title_input_trouble_sheet"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cgGenres" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clInputTrouble"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_input_text"
                    android:padding="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTroubleSheet">

                    <EditText
                        android:id="@+id/content_trouble_sheet_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="top|left"
                        android:hint="@string/hint_content_trouble_sheet"
                        android:inputType="textNoSuggestions|textMultiLine"
                        android:lines="6"
                        android:maxLines="10"
                        android:scrollbars="vertical"
                        android:singleLine="false"
                        android:textColor="@color/color_E3DFEF"
                        android:textColorHint="@color/color_6D5D9A"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/error_imoji_tv"
                        style="@style/text_bold_10"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:text="@string/donot_input_email"
                        android:textColor="@color/color_alert_error"
                        android:visibility="gone"
                        app:layout_constraintEnd_toStartOf="@+id/count_text_tv"
                        app:layout_constraintTop_toTopOf="@+id/count_text_tv" />

                    <TextView
                        android:id="@+id/count_text_tv"
                        style="@style/text_bold_10"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="6dp"
                        android:text="128"
                        android:textColor="@color/color_6D5D9A"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/content_trouble_sheet_edt" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <include
                    android:id="@+id/layoutYourInfo"
                    layout="@layout/layout_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/clInputTrouble" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="32dp"
                    android:alpha="0.15"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/layoutYourInfo" />

                <include
                    android:id="@+id/layoutPartnerInfo"
                    layout="@layout/layout_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/divider1" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="32dp"
                    android:alpha="0.15"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/layoutPartnerInfo" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/padding_16dp"
                    android:paddingVertical="@dimen/margin_32"
                    app:layout_constraintTop_toBottomOf="@+id/divider2">

                    <TextView
                        android:id="@+id/title_question_tv"
                        style="@style/text_16"
                        android:layout_centerVertical="true"
                        android:text="@string/desired_response"
                        android:textColor="@color/white"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/choose_question_chip_group"
                        style="@style/CommonChipGroupChoiceStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_12"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/title_question_tv">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/answer_feeling_chip"
                            style="@style/CommonChipChoiceStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/answer_feeling" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/answer_advice_chip"
                            style="@style/CommonChipChoiceStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/answer_advice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/answer_sort_feeling_chip"
                            style="@style/CommonChipChoiceStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/answer_sort_feeling" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/answer_other"
                            style="@style/CommonChipChoiceStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_other" />

                    </com.google.android.material.chip.ChipGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/tvSave"
            android:layout_marginBottom="@dimen/margin_10"
            android:alpha="0.15"
            android:background="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSave"
            style="@style/text_bold_16"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_button_state"
            android:enabled="false"
            android:gravity="center"
            android:paddingVertical="18dp"
            android:text="@string/trouble_btn" />

