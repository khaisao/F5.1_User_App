<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

            <LinearLayout
                android:background="@color/color_background_common"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image"
                    android:src="@drawable/maintenance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/under_maintenance"
                    android:layout_marginTop="@dimen/margin_38"
                    android:textSize="@dimen/text_size_24"
                    android:textStyle="bold"
                    android:textColor="@color/color_978DFF"
                    />
                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/text_size_24"
                    android:text="@string/careia_maintenance"
                    android:layout_marginTop="@dimen/text_size_32"
                    android:textSize="@dimen/margin_14"
                    android:textColor="@color/color_text_E3DFEF"
                    />
                <ImageView
                    android:id="@+id/btn_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_48"
                    android:src="@drawable/ic_btntwitter"
                    />
            </LinearLayout>
</layout>