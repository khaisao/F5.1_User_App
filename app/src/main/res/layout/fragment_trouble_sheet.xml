<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_1D1045">

        <jp.careapp.counseling.android.utils.customView.ToolBarCommon
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:src_left="@drawable/ic_back_left"
            app:string_title="@string/title_select_category" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrool_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/divider"
            android:layout_below="@+id/tool_bar"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/text_16"
                    android:layout_marginTop="@dimen/margin_14"
                    android:paddingLeft="@dimen/margin_16"
                    android:paddingRight="@dimen/margin_16"
                    android:text="@string/title_input_trouble_sheet"
                    android:textColor="@color/color_text_E3DFEF"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/content_trouble_sheet_edt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_16"
                    android:background="@color/transparent"
                    android:gravity="top|left"
                    android:hint="@string/hint_content_trouble_sheet"
                    android:inputType="textNoSuggestions|textMultiLine"
                    android:paddingBottom="12dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/purple_AEA2D1"
                    android:textColorHint="@color/color_6D5D9A"
                    app:layout_constraintTop_toBottomOf="@id/tvTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/guideline"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.6"/>

                <LinearLayout
                    android:id="@+id/layout_imoji"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="@id/tvTitle"
                    app:layout_constraintBottom_toBottomOf="@id/tvTitle"
                    app:layout_constraintStart_toEndOf="@id/tvTitle"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/error_imoji_tv"
                        style="@style/text_bold_10"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:text="@string/donot_input_email"
                        android:textColor="@color/color_alert_error"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/count_text_tv"
                        style="@style/text_bold_10"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:text="128"
                        android:textColor="@color/color_6D5D9A" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_1"
            android:layout_above="@+id/send_message_btn"
            android:layout_marginBottom="@dimen/margin_10"
            android:alpha="0.15"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tvEnterLater"
            style="@style/text_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/send_message_btn"
            android:layout_alignBottom="@id/send_message_btn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_24dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="@string/enter_later"
            android:textColor="@color/color_978DFF" />

        <LinearLayout
            android:id="@+id/send_message_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/tvEnterLater"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin_24"
            android:layout_marginBottom="@dimen/margin_24"
            android:background="@drawable/bg_disable_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="63dp">

            <TextView
                android:id="@+id/send_mess_tv"
                style="@style/text_bold_16"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="center"
                android:paddingTop="@dimen/margin_18"
                android:paddingBottom="@dimen/margin_18"
                android:text="@string/tv_complete"
                android:textColor="@color/color_6D5D9A" />
        </LinearLayout>

    </RelativeLayout>

</layout>
