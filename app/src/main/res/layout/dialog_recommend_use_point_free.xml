<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="@dimen/margin_16"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvRecommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recommend_use_point_free"
        android:paddingHorizontal="@dimen/margin_12"
        android:paddingVertical="@dimen/margin_10"
        android:background="@drawable/bg_use_point_free"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewOne"
        app:layout_constraintBottom_toBottomOf="@id/tvRecommend"
        app:layout_constraintStart_toStartOf="@id/tvRecommend"
        app:layout_constraintEnd_toEndOf="@id/tvRecommend"
        android:layout_marginBottom="@dimen/margin_14"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/viewOne"
        app:layout_constraintStart_toStartOf="@id/tvRecommend"
        app:layout_constraintEnd_toEndOf="@id/tvRecommend"
        android:src="@drawable/ic_arrow_drop_down"
        android:scaleType="centerCrop"
        android:padding="0dp"
        android:layout_width="@dimen/margin_15"
        android:layout_height="@dimen/margin_32"/>

</androidx.constraintlayout.widget.ConstraintLayout>