<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_50090E1B"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_buy_point"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/title_point_tv"
                style="@style/text_bold_16"
                android:layout_marginTop="@dimen/margin_32"
                android:layout_marginBottom="@dimen/margin_16"
                android:text="@string/point_purchase"
                android:textColor="@color/color_E3DFEF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/purchase_point_reason_tv"
                style="@style/text_14"
                android:layout_marginBottom="@dimen/margin_16"
                android:gravity="center"
                android:textColor="@color/color_B2A9CC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                tools:text="@string/point_purchase_reason" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/point_purchase_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_24"
                android:background="@drawable/bg_gradient_common"
                android:text="@string/pointLoadingText"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/point_purchase_button_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/bg_gradient_common"
                android:text="@string/pointLoadingText"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/point_purchase_button_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/bg_gradient_common"
                android:text="@string/pointLoadingText"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/cancel_button_tv"
                style="@style/text_bold_16"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_24"
                android:background="@drawable/bg_corner_24dp_332167"
                android:gravity="center"
                android:paddingTop="@dimen/margin_16"
                android:paddingBottom="@dimen/margin_16"
                android:text="@string/cancel"
                android:textColor="@color/color_AEA2D1" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>