<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin_5dp"
        android:paddingStart="@dimen/margin_16"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/avatar_iv"
            android:layout_width="@dimen/margin_55"
            android:layout_height="@dimen/margin_55"
            android:src="@drawable/ic_avatar_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/content_messgae_rl"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_toStartOf="@+id/status_meesage_ll"
            android:layout_toEndOf="@+id/avatar_iv"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_iv"
            app:layout_constraintEnd_toStartOf="@+id/status_meesage_ll"
            app:layout_constraintStart_toEndOf="@+id/avatar_iv"
            app:layout_constraintTop_toTopOf="@+id/avatar_iv">

            <TextView
                android:id="@+id/status_online_tv"
                style="@style/text_bold_12"
                android:layout_marginEnd="@dimen/_6sdp"
                android:background="@drawable/bg_corner_2dp_14d284"
                android:paddingLeft="@dimen/margin_5dp"
                android:paddingTop="@dimen/margin_3"
                android:paddingRight="@dimen/margin_5dp"
                android:paddingBottom="@dimen/margin_3"
                android:text="@string/receiving"
                android:textColor="@color/color_1D1045"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/status_offline_tv"
                style="@style/text_bold_12"
                android:background="@drawable/bg_strock_2dp_aea2d1"
                android:paddingLeft="@dimen/margin_5dp"
                android:paddingTop="@dimen/margin_3"
                android:paddingRight="@dimen/margin_5dp"
                android:paddingBottom="@dimen/margin_3"
                android:text="@string/away"
                android:textColor="@color/purple_AEA2D1" />

            <TextView
                android:id="@+id/name_user_tv"
                style="@style/text_bold_14"
                android:layout_alignBottom="@+id/status_online_tv"
                android:layout_toRightOf="@+id/status_online_tv"
                android:ellipsize="end"
                android:lines="1"
                android:paddingEnd="@dimen/margin_4dp"
                android:textColor="@color/color_text_E3DFEF"
                tools:ignore="RtlSymmetry"
                tools:text="なまえ" />

            <TextView
                android:id="@+id/last_message_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_user_tv"
                android:layout_marginTop="@dimen/view_size_5"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/spacing_2"
                android:lines="2"
                android:textSize="@dimen/text_size_14"
                tools:text="【通知】チャットが終了しました【通知】チャットが終了しました【通知】チャットが終了しました" />

            <TextView
                android:id="@+id/tvPayMessage"
                style="@style/text_14"
                android:layout_below="@+id/name_user_tv"
                android:layout_marginTop="@dimen/view_size_10"
                android:text="@string/pay_message"
                android:textColor="@color/color_FF57A9"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/status_meesage_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingEnd="@dimen/margin_16"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/avatar_iv">

            <TextView
                android:id="@+id/date_sent_tv"
                style="@style/text_10"
                android:gravity="end"
                android:minWidth="50dp"
                android:textColor="@color/purple_AEA2D1"
                tools:text="11:28" />

            <TextView
                android:id="@+id/status_open_tv"
                style="@style/text_10"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/ic_status_new"
                android:gravity="center"
                android:minWidth="16dp"
                android:minHeight="16dp"
                android:paddingHorizontal="@dimen/margin_4dp"
                android:paddingVertical="@dimen/margin_2"
                android:text="N"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:id="@+id/line_bottom"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_7"
            android:alpha="0.15"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/content_messgae_rl"
            app:layout_constraintTop_toBottomOf="@id/content_messgae_rl" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
