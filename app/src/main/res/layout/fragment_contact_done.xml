<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_common"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/tool_bar_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/text_size_24"
                    android:layout_marginTop="@dimen/text_size_24"
                    android:text="@string/tks_inquiry"
                    android:textColor="@color/color_text_E3DFEF"
                    android:textSize="@dimen/margin_16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/text_size_24"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="@string/we_will_contact_you"
                    android:textSize="@dimen/margin_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/text_size_24"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="@string/if_you_do_not_receive"
                    android:textColor="@color/purple_AEA2D1"
                    android:textSize="@dimen/margin_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/text_size_24"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:text="@string/receive_a_message"
                    android:textColor="@color/purple_AEA2D1"
                    android:textSize="@dimen/margin_14" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>