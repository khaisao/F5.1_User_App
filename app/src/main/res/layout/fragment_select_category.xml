<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_common"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="RtlCompat">

        <jp.careapp.counseling.android.utils.customView.ToolBarCommon
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:src_left="@drawable/ic_back_left"
            app:string_title="@string/title_select_category" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="@dimen/margin_2"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/view_line_bottom">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/title_guide_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        style="@style/text_14"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_marginTop="@dimen/margin_16"
                        android:paddingLeft="@dimen/margin_16"
                        android:paddingRight="@dimen/margin_16"
                        android:text="@string/guide_select_category"
                        android:textColor="@color/color_E3DFEF" />

                    <View
                        android:id="@+id/line_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_16"
                        android:alpha="0.15"
                        android:visibility="invisible"
                        android:background="@color/white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvWorry"
                    style="@style/text_bold_16"
                    android:paddingLeft="@dimen/margin_16"
                    android:paddingRight="@dimen/margin_16"
                    android:text="@string/title_search_category"
                    android:textColor="@color/color_text_E3DFEF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title_guide_ll"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/genres_chip_group"
                    style="@style/CommonChipGroupChoiceStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_12"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvWorry"/>

                <TextView
                    android:id="@+id/tvAnswer"
                    style="@style/text_bold_16"
                    android:paddingLeft="@dimen/margin_16"
                    android:paddingRight="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_32"
                    android:text="@string/desired_response"
                    android:textColor="@color/color_text_E3DFEF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/genres_chip_group"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/choose_answer_chip_group"
                    style="@style/CommonChipGroupChoiceStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginRight="@dimen/margin_16"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/tvAnswer">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/answer_feeling_chip"
                        style="@style/CommonChipChoiceStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/answer_feeling" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/answer_advice_chip"
                        style="@style/CommonChipChoiceStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/answer_advice" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/answer_sort_feeling_chip"
                        style="@style/CommonChipChoiceStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/answer_sort_feeling" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/answer_other"
                        style="@style/CommonChipChoiceStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_other" />

                </com.google.android.material.chip.ChipGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/view_line_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/color_6D5D9A"
            android:layout_marginBottom="@dimen/dimen_110"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:background="@drawable/bg_disable_button"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/view_line_bottom"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/next_tv"
                style="@style/text_bold_16"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="center"
                android:paddingTop="@dimen/margin_18"
                android:paddingBottom="@dimen/margin_18"
                android:text="@string/tv_next"
                android:textColor="@color/color_6D5D9A" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>