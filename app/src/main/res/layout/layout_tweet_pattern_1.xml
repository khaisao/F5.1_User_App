<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="@dimen/margin_16"
            android:adjustViewBounds="true"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tweet_tv_pattern_1"
            style="@style/text_14"
            android:textColor="@color/color_887CE7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tweet_pattern"
            android:minHeight="30dp"
            android:paddingHorizontal="@dimen/margin_10"
            android:paddingVertical="2dp"
            android:gravity="start|center_vertical"
            android:layout_marginTop="@dimen/margin_14"
            app:layout_constraintTop_toBottomOf="@id/img_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/view_pattern_1"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            app:layout_constraintTop_toTopOf="@id/tweet_tv_pattern_1" />

        <ImageView
            android:id="@+id/img_arrow_up"
            app:layout_constraintTop_toTopOf="@id/view_pattern_1"
            app:layout_constraintBottom_toBottomOf="@id/view_pattern_1"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/tweet_tv_pattern_1"
            app:layout_constraintEnd_toEndOf="@id/tweet_tv_pattern_1"
            android:src="@drawable/ic_arrow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_marginTop="1dp"
            android:background="@color/color_332167"
            app:layout_constraintTop_toTopOf="@id/view_pattern_1"
            app:layout_constraintStart_toStartOf="@id/img_arrow_up"
            app:layout_constraintEnd_toEndOf="@id/img_arrow_up"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
