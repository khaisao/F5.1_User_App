<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_point_free">

        <ImageView
            android:id="@+id/iv_point_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/popup_thanks_campaign"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size_24"
            android:textSize="@dimen/margin_14"
            app:layout_constraintEnd_toEndOf="@+id/iv_point_free"
            app:layout_constraintStart_toStartOf="@+id/iv_point_free"
            app:layout_constraintTop_toBottomOf="@+id/iv_point_free"
            tools:ignore="SpUsage" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/_0sdp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/text_size_32"
            android:layout_marginTop="@dimen/text_size_24"
            android:background="@drawable/bg_gradient_common"
            android:text="@string/text_OK"
            app:layout_constraintEnd_toEndOf="@+id/iv_point_free"
            app:layout_constraintStart_toStartOf="@+id/iv_point_free"
            app:layout_constraintTop_toBottomOf="@+id/tv_message" />

        <View
            android:layout_width="@dimen/_0sdp"
            android:layout_height="@dimen/_0sdp"
            android:layout_marginTop="@dimen/text_size_24"
            app:layout_constraintEnd_toEndOf="@+id/iv_point_free"
            app:layout_constraintStart_toStartOf="@+id/iv_point_free"
            app:layout_constraintTop_toBottomOf="@+id/btn_ok" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>