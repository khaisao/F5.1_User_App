<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="performerResponse"
            type="jp.careapp.counseling.android.model.network.BasePerformerResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rm_favorite_item"
        android:paddingVertical="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_no_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/statusImage"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/bg_rm_online_status"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintEnd_toEndOf="@+id/image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewNickName"
            style="@style/text_bold_14"
            namePerformerResponse="@{performerResponse}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:includeFontPadding="false"
            android:textColor="@color/color_070707"
            app:layout_constraintEnd_toStartOf="@+id/btn_delete"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ニックネーム" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_6dp"
            app:layout_constraintStart_toStartOf="@+id/textViewNickName"
            app:layout_constraintTop_toBottomOf="@+id/textViewNickName">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_video"
                cameraPerformerResponse="@{performerResponse}"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/iv_video" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_message"
                msgPerformerResponse="@{performerResponse}"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_message" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_delete"
            performerResponse="@{performerResponse}"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_btn_remove"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>