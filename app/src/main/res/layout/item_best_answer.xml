<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_vertical_common"
        android:padding="@dimen/view_size_16">

        <TextView
            android:id="@+id/tv_label_best_answer"
            style="@style/text_bold_16"
            android:text="@string/best_answer"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/layout_answer"
            layout="@layout/layout_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_size_16"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_best_answer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>