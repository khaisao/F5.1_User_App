<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_common"
        tools:ignore="RtlCompat">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_top"
            android:layout_width="209dp"
            android:layout_height="111dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_splash_logo"
            android:layout_marginTop="130dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@id/iv_top"
            app:layout_constraintBottom_toBottomOf="parent">

            <RelativeLayout
                android:id="@+id/rlSignInWithoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_24"
                android:background="@drawable/bg_gradient_common"
                android:gravity="center_horizontal"
                android:paddingVertical="@dimen/padding_16dp">

                <ImageView
                    android:id="@+id/ivMessage"
                    android:layout_width="@dimen/dimen_24"
                    android:layout_height="@dimen/dimen_24"
                    android:src="@drawable/ic_btn_message_active"
                    tools:ignore="ContentDescription" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/text_bold_16"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_toEndOf="@+id/ivMessage"
                    android:text="@string/start_consultation"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSignInWithEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_24"
                android:background="@drawable/bg_strock_26dp_978dff"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_16"
                android:paddingTop="@dimen/padding_16dp"
                android:paddingBottom="@dimen/margin_16">

                <ImageView
                    android:id="@+id/ivEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mail"
                    tools:ignore="ContentDescription" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/text_bold_16"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_toEndOf="@+id/ivEmail"
                    android:text="@string/sign_in_with_email"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent" />
            </RelativeLayout>

            <View
                android:layout_weight="32"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDifficult"
                style="@style/text_12"
                android:layout_gravity="center"
                android:padding="@dimen/margin_5dp"
                android:text="@string/trouble_logging"
                android:textColor="@color/color_978DFF" />

            <View
                android:layout_weight="72"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <LinearLayout
                android:id="@+id/llBottom"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTermService"
                    style="@style/text_12"
                    android:padding="@dimen/margin_5dp"
                    android:text="@string/service_account"
                    android:textColor="@color/purple_AEA2D1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPrivacy"
                    style="@style/text_12"
                    android:layout_marginStart="@dimen/margin_12"
                    android:padding="@dimen/margin_5dp"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/purple_AEA2D1" />

            </LinearLayout>

            <View
                android:layout_weight="72"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>