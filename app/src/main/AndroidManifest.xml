<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.careapp.counseling">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />

    <application
        android:name="jp.careapp.counseling.android.AppApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name="jp.careapp.counseling.android.ui.welcome.WelcomeActivity"
            android:configChanges="locale|orientation|screenSize"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <activity
            android:name="jp.careapp.counseling.android.ui.main.MainActivity"
            android:configChanges="locale|orientation|screenSize"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="notice"
                    android:scheme="sparklive" />
                <data
                    android:host="ranking"
                    android:scheme="sparklive" />
                <data
                    android:host="buypoint"
                    android:scheme="sparklive" />
                <data
                    android:host="freepoint"
                    android:scheme="sparklive" />
                <data
                    android:host="counselor"
                    android:scheme="sparklive" />
                <data
                    android:host="mymenu"
                    android:scheme="sparklive" />
                <data
                    android:host="labo"
                    android:scheme="sparklive" />
                <data
                    android:host="setting_notification"
                    android:scheme="sparklive" />
                <data
                    android:host="edit_seet"
                    android:scheme="sparklive" />
                <data
                    android:host="message"
                    android:scheme="sparklive" />
                <data
                    android:host="payment_method"
                    android:scheme="sparklive" />
                <data
                    android:host="payment_01"
                    android:scheme="sparklive" />
                <data
                    android:host="payment_02"
                    android:scheme="sparklive" />
                <data
                    android:host="payment_03"
                    android:scheme="sparklive" />
                <data
                    android:host="payment_04"
                    android:scheme="sparklive" />
                <data
                    android:host="blog"
                    android:scheme="sparklive" />
                <data
                    android:host="contact"
                    android:scheme="sparklive" />
            </intent-filter>

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="sparklive.onelink.me"
                    android:pathPrefix="/JSsf"
                    android:scheme="https" />
            </intent-filter>

        </activity>

        <!--        Firebase notification-->
        <service
            android:name="jp.careapp.counseling.android.notification.AppFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_small_notification" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />

        <receiver
            android:name="com.adjust.sdk.AdjustReferrerReceiver"
            android:exported="true"
            android:permission="android.permission.INSTALL_PACKAGES">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

    </application>

</manifest>